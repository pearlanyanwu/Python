# (1) set a variable to an imteger value.
m = 24
print(m, type(m))

# (2) set a variable to a floating point value.
p = 18.3
print(p, type(p))

# (3) use the type conversion functions to convert a(n):
# (a) integer to float.
print("converting an integer to a float.")
i = 56
typ_before = type(i)
print(i, typ_before)
j = float(i)
typ_after = type(j)
print(j, typ_after)

# (b) float to a string
print("converting a float to a string")
f = 34.7
typ_before = type(f)
print(f, typ_before)
g = str(f)
typ_after = type(g)
print(g, typ_after)

# (c) string to an integer
print("converting a string to an integer")
s = '867'
typ_before = type(s)
print(s, typ_before)
t = int(s)
typ_after = type(t)
print(t, typ_after)
